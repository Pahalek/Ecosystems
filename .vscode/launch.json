{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Research Agent Analysis",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/agents/research_agent.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": []
        },
        {
            "name": "Three-Phase Model Demo",
            "type": "python", 
            "request": "launch",
            "program": "${workspaceFolder}/src/models/three_phase_model.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": []
        },
        {
            "name": "Visualization Planner",
            "type": "python",
            "request": "launch", 
            "program": "${workspaceFolder}/src/visualization/planner.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": []
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Jupyter: Current File",
            "type": "python",
            "request": "launch",
            "module": "jupyter",
            "args": [
                "notebook",
                "--no-browser",
                "--port=8888"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}